rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Règles pour le dossier documents
    match /documents/{document} {
      // Permettre la lecture à tous les utilisateurs authentifiés
      allow read: if request.auth != null;
      
      // Permettre l'écriture (upload) uniquement aux admins
      allow write: if request.auth != null;
      
      // Note: Pour une sécurité renforcée, décommentez la ligne ci-dessous
      // et commentez la ligne au-dessus une fois que vous avez configuré
      // le champ 'role' dans votre collection 'users'
      // allow write: if request.auth != null && 
      //                 firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == 'Administrateur';
    }
    
    // Règle par défaut : refuser tout accès
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
